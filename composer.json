{
  "name": "tuzex/ddd-messenger-bundle",
  "description": "Implementation of DDD (Domain Driven Design) library based on Symfony messenger",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "platform": {
      "php": "8.1",
      "ext-intl": "1"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Bundle\\Ddd\\Messenger\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Bundle\\Ddd\\Messenger\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "symfony/framework-bundle": "5.*|6.*",
    "symfony/messenger": "5.*|6.*",
    "tuzex/ddd": "0.5.*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.4.*",
    "phpstan/phpstan-phpunit": "1.0.*",
    "phpunit/phpunit": "9.5.*",
    "symplify/easy-coding-standard": "10.0.*"
  }
}
