<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="Tuzex\Timekeeper\TimeService" alias="Tuzex\Timekeeper\SystemTimeService"/>
        <service id="Tuzex\Timekeeper\SystemTimeService"/>

        <service id="Tuzex\Ddd\Domain\Timing\Clock" alias="Tuzex\Ddd\Infrastructure\Domain\Timing\Clock\SystemClock"/>
        <service id="Tuzex\Ddd\Infrastructure\Domain\Timing\Clock\SystemClock"/>

        <service id="Tuzex\Ddd\Application\CommandBus" alias="Tuzex\Bundle\Ddd\Messaging\MessengerCommandBus"/>
        <service id="Tuzex\Bundle\Ddd\Messaging\MessengerCommandBus">
            <argument type="service" id="tuzex.ddd.command_bus"/>
        </service>

        <service id="Tuzex\Ddd\Application\DomainEventBus" alias="Tuzex\Bundle\Ddd\Messaging\MessengerDomainEventBus"/>
        <service id="Tuzex\Bundle\Ddd\Messaging\MessengerDomainEventBus">
            <argument type="service" id="tuzex.ddd.domain_event_bus"/>
        </service>

        <service id="Tuzex\Ddd\Application\Service\CommandsDispatcher" alias="Tuzex\Ddd\Application\Service\DirectCommandsDispatcher"/>
        <service id="Tuzex\Ddd\Application\Service\DirectCommandsDispatcher"/>

        <service id="Tuzex\Ddd\Application\Service\DomainEventsPublisher" alias="Tuzex\Ddd\Application\Service\DirectDomainEventsPublisher"/>
        <service id="Tuzex\Ddd\Application\Service\DirectDomainEventsPublisher"/>
    </services>
</container>
