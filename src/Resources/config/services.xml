<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="Tuzex\Timekeeper\TimeService" alias="Tuzex\Timekeeper\SystemTimeService"/>
        <service id="Tuzex\Timekeeper\SystemTimeService"/>

        <service id="Tuzex\Ddd\Domain\Clock" alias="Tuzex\Ddd\Infrastructure\Domain\Clock\SystemClock"/>
        <service id="Tuzex\Ddd\Infrastructure\Domain\Clock\SystemClock"/>

        <service id="Tuzex\Ddd\Application\DomainCommandBus" alias="Tuzex\Ddd\Messenger\MessengerDomainCommandBus"/>
        <service id="Tuzex\Ddd\Messenger\MessengerDomainCommandBus">
            <argument type="service" id="tuzex.ddd.domain_command_bus"/>
        </service>

        <service id="Tuzex\Ddd\Application\DomainEventBus" alias="Tuzex\Ddd\Messenger\MessengerDomainEventBus"/>
        <service id="Tuzex\Ddd\Messenger\MessengerDomainEventBus">
            <argument type="service" id="tuzex.ddd.domain_event_bus"/>
        </service>

        <service id="Tuzex\Ddd\Application\Service\DomainCommandsDispatcher" alias="Tuzex\Ddd\Application\Service\DirectDomainCommandsDispatcher"/>
        <service id="Tuzex\Ddd\Application\Service\DirectDomainCommandsDispatcher"/>

        <service id="Tuzex\Ddd\Application\Service\DomainEventsPublisher" alias="Tuzex\Ddd\Application\Service\DirectDomainEventsPublisher"/>
        <service id="Tuzex\Ddd\Application\Service\DirectDomainEventsPublisher"/>
    </services>
</container>
